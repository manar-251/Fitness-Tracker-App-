<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Workout Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-dumbbell"></i> Workout Tracker
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/workouts">
                            <i class="fas fa-list"></i> My Workouts
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/workouts/new">
                            <i class="fas fa-plus"></i> Add Workout
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard/stats">
                            <i class="fas fa-chart-bar"></i> Statistics
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user"></i> Account
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <form action="/auth/signout" method="POST" class="d-inline">
                                    <button type="submit" class="dropdown-item">
                                        <i class="fas fa-sign-out-alt"></i> Sign Out
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>My Workouts</h1>
                    <div>
                        <a href="/workouts/export/csv?<%= new URLSearchParams(filters).toString() %>" class="btn btn-outline-success me-2">
                            <i class="fas fa-download"></i> Export CSV
                        </a>
                        <a href="/workouts/new" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add Workout
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-filter"></i> Filters
                </h6>
            </div>
            <div class="card-body">
                <form method="GET" action="/workouts">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label for="dateFrom" class="form-label">From Date</label>
                            <input type="date" class="form-control" id="dateFrom" name="dateFrom" 
                                   value="<%= filters.dateFrom || '' %>">
                        </div>
                        <div class="col-md-3">
                            <label for="dateTo" class="form-label">To Date</label>
                            <input type="date" class="form-control" id="dateTo" name="dateTo" 
                                   value="<%= filters.dateTo || '' %>">
                        </div>
                        <div class="col-md-3">
                            <label for="type" class="form-label">Type</label>
                            <select class="form-select" id="type" name="type">
                                <option value="">All Types</option>
                                <% workoutTypes.forEach(type => { %>
                                    <option value="<%= type %>" <%= filters.type === type ? 'selected' : '' %>>
                                    <%= type %>
                                </option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="search" class="form-label">Search Notes</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   placeholder="Search in notes..." value="<%= filters.search || '' %>">
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Apply Filters
                            </button>
                            <a href="/workouts" class="btn btn-outline-secondary ms-2">
                                <i class="fas fa-times"></i> Clear
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Workouts List -->
        <% if (workouts.length === 0) { %>
            <div class="text-center py-5">
                <i class="fas fa-dumbbell fa-4x text-muted mb-4"></i>
                <h3 class="text-muted">No workouts found</h3>
                <p class="text-muted">Start tracking your fitness journey or adjust your filters.</p>
                <a href="/workouts/new" class="btn btn-primary">Add Your First Workout</a>
            </div>
        <% } else { %>
            <div class="row">
                <% workouts.forEach(workout => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <% if (workout.photo) { %>
                                <img src="/uploads/<%= workout.photo %>" class="card-img-top" alt="Workout photo" style="height: 200px; object-fit: cover;">
                            <% } %>
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title mb-0"><%= workout.type %></h5>
                                    <span class="badge bg-primary"><%= workout.duration %> min</span>
                                </div>
                                <p class="card-text text-muted mb-2">
                                    <i class="fas fa-calendar"></i> <%= moment(workout.date).format('MMM DD, YYYY') %>
                                </p>
                                <% if (workout.notes) { %>
                                    <p class="card-text">
                                        <%= workout.notes.length > 100 ? workout.notes.substring(0, 100) + '...' : workout.notes %>
                                    </p>
                                <% } %>
                                <% if (workout.tags && workout.tags.length > 0) { %>
                                    <div class="mb-2">
                                        <% workout.tags.forEach(tag => { %>
                                            <span class="badge bg-secondary me-1"><%= tag %></span>
                                        <% }) %>
                                    </div>
                                <% } %>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="btn-group w-100" role="group">
                                    <a href="/workouts/<%= workout._id %>" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <a href="/workouts/<%= workout._id %>/edit" class="btn btn-outline-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <button type="button" class="btn btn-outline-danger btn-sm" 
                                            onclick="deleteWorkout('<%= workout._id %>')">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <nav aria-label="Workouts pagination">
                    <ul class="pagination justify-content-center">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage - 1 %>&<%= new URLSearchParams(filters).toString() %>">
                                    Previous
                                </a>
                            </li>
                        <% } %>
                        
                        <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>&<%= new URLSearchParams(filters).toString() %>">
                                    <%= i %>
                                </a>
                            </li>
                        <% } %>
                        
                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage + 1 %>&<%= new URLSearchParams(filters).toString() %>">
                                    Next
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        <% } %>
    </main>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this workout? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let workoutToDelete = null;

        function deleteWorkout(workoutId) {
            workoutToDelete = workoutId;
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        document.getElementById('confirmDelete').addEventListener('click', async function() {
            if (workoutToDelete) {
                try {
                    const response = await fetch(`/workouts/${workoutToDelete}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    });

                    const result = await response.json();

                    if (result.success) {
                        location.reload();
                    } else {
                        alert('Error deleting workout: ' + result.message);
                    }
                } catch (error) {
                    alert('Error deleting workout: ' + error.message);
                }
            }
        });
    </script>
</body>
</html>