<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Workout Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-dumbbell"></i> Workout Tracker
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/workouts">
                            <i class="fas fa-list"></i> My Workouts
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/workouts/new">
                            <i class="fas fa-plus"></i> Add Workout
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard/stats">
                            <i class="fas fa-chart-bar"></i> Statistics
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user"></i> Account
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <form action="/auth/signout" method="POST" class="d-inline">
                                    <button type="submit" class="dropdown-item">
                                        <i class="fas fa-sign-out-alt"></i> Sign Out
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-eye"></i> Workout Details
                        </h4>
                        <div>
                            <a href="/workouts/<%= workout._id %>/edit" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <button type="button" class="btn btn-danger btn-sm" 
                                    onclick="deleteWorkout('<%= workout._id %>')">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <% if (workout.photo) { %>
                                <div class="col-md-4 mb-3">
                                    <img src="/uploads/<%= workout.photo %>" class="img-fluid rounded" alt="Workout photo">
                                </div>
                                <div class="col-md-8">
                            <% } else { %>
                                <div class="col-12">
                            <% } %>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <h6 class="text-muted">Duration</h6>
                                        <p class="lead">
                                            <i class="fas fa-clock text-primary"></i> <%= workout.duration %> minutes
                                        </p>
                                    </div>
                                    <div class="col-sm-4">
                                        <h6 class="text-muted">Date</h6>
                                        <p class="lead">
                                            <i class="fas fa-calendar text-primary"></i> 
                                            <%= moment(workout.date).format('MMMM DD, YYYY') %>
                                        </p>
                                    </div>
                                </div>

                                <% if (workout.tags && workout.tags.length > 0) { %>
                                    <div class="mb-3">
                                        <h6 class="text-muted">Tags</h6>
                                        <% workout.tags.forEach(tag => { %>
                                            <span class="badge bg-secondary me-1"><%= tag %></span>
                                        <% }) %>
                                    </div>
                                <% } %>

                                <% if (workout.notes) { %>
                                    <div class="mb-3">
                                        <h6 class="text-muted">Notes</h6>
                                        <p style="white-space: pre-wrap;"><%= workout.notes %></p>
                                    </div>
                                <% } %>

                                <div class="mb-3">
                                    <h6 class="text-muted">Created</h6>
                                    <p class="text-muted">
                                        <i class="fas fa-clock"></i> 
                                        <%= moment(workout.createdAt).format('MMMM DD, YYYY [at] h:mm A') %>
                                    </p>
                                </div>

                                <% if (workout.updatedAt && workout.updatedAt.getTime() !== workout.createdAt.getTime()) { %>
                                    <div class="mb-3">
                                        <h6 class="text-muted">Last Updated</h6>
                                        <p class="text-muted">
                                            <i class="fas fa-edit"></i> 
                                            <%= moment(workout.updatedAt).format('MMMM DD, YYYY [at] h:mm A') %>
                                        </p>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between">
                            <a href="/workouts" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Workouts
                            </a>
                            <div>
                                <a href="/workouts/<%= workout._id %>/edit" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> Edit Workout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this workout? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let workoutToDelete = null;

        function deleteWorkout(workoutId) {
            workoutToDelete = workoutId;
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        document.getElementById('confirmDelete').addEventListener('click', async function() {
            if (workoutToDelete) {
                try {
                    const response = await fetch(`/workouts/${workoutToDelete}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    });

                    const result = await response.json();

                    if (result.success) {
                        window.location.href = '/workouts';
                    } else {
                        alert('Error deleting workout: ' + result.message);
                    }
                } catch (error) {
                    alert('Error deleting workout: ' + error.message);
                }
            }
        });
    </script>
